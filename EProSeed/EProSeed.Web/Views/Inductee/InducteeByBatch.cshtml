@model IList<EProSeed.Models.InducteeModel>


<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Emp-Id
            </th>
            <th>
                Email
            </th>
            <th>
                Phone
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count()>0)
        {
            EProSeed.Lib.BLL.UserType CurrentUserType = EProSeed.Lib.BLL.UserType.None;
           bool GotUserType = Enum.TryParse<EProSeed.Lib.BLL.UserType>(Session["UserType"].ToString(), out CurrentUserType);
            foreach (var Inductee in Model)
            {
                <tr id="row-@Inductee.Id">
                    <td>
                        @Inductee.Name
                    </td>
                    <td>
                        @Inductee.EmpId
                    </td>
                    <td>
                        <a href="mailto:@Inductee.Email">
                           @Inductee.Email
                        </a>
                    </td>
                    <td>
                        @Inductee.Phone
                    </td>
                    <td>
                        @if(GotUserType && CurrentUserType == EProSeed.Lib.BLL.UserType.Trainer)
                        { 
                        <a href="/Inductee/Edit/@Inductee.Id" data-toggle="tooltip" title="Edit '@Inductee.Name'" class="blue"> 
                        <i class="ace-icon fa fa-2x fa-pencil"></i></a> 



                        <a href="/Inductee/delete/@Inductee.Id" onclick="return confirm('Are you sure?');" data-toggle="tooltip" class="red" title="Delete '@Inductee.Name'"><i class="ace-icon fa fa-2x fa-trash"></i></a>
                            
                        }
                        &nbsp;
                        <a href="/feedback/of/@Inductee.Id" data-toggle="tooltip" title="Feedback">
                            <i class="fa fa-2x fa-archive" aria-hidden="true"></i>
                        </a>
                    </td>

                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" align="center"> 
                    Trainees not found
                </td>
            </tr>
        }

    </tbody>
</table>