@model vmBatch
@{
    ViewBag.Title = "Create Batch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-md-12">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(x => x.BatchDates, new { @id = "BatchDates" });
        @*<fieldset disabled>
                <div class="form-group">
                  <input type="text"  value="@Session["Name"]" />
                </div>
            </fieldset>*@

        <div class="form-group">
            <label>Trainer</label>
            @Html.DropDownListFor(m => m.TrainerId, ViewBag.Trainers as SelectList,
           "Select Trainer", new
           {
               @class = "form-control",
               @data_val = "true",
               @data_val_number = "The field Trainer must be a number.",
               @data_val_required = "Select Trainer."
           })

            <span class="field-validation-error" data-valmsg-for="TrainerId" data-valmsg-replace="true"></span>

        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Name)
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control ", @placeholder = "Name" })
            @Html.ValidationMessageFor(x => x.Name)
        </div>

        <div style="overflow:hidden;">
            <label>Select Dates</label>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-8">
                        <div id="createBatchDates"></div>
                    </div>
                </div>
            </div>
        </div>
        @Html.ValidationMessageFor(x => x.BatchDates)
        <div class="form-group col-xs-12 col-md-12 col-lg-12 col-sm-12">
            <input type="submit" id="btnCreateBatch" class="btn btn-success" value="Create Batch" />
        </div>
    }
</div>
