@model EProSeed.Web.Models.vmBatch
@{
    ViewBag.Title = "Edit batch";
}
<div class="col-md-12">
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(B => B.Id)
        @Html.HiddenFor(x => x.BatchDates, new { @id = "BatchDates" });
       
        @Html.AntiForgeryToken()
        @*<fieldset disabled>
                <div class="form-group">
                  <input type="text"  value="@Session["Name"]" />
                </div>
            </fieldset>*@


        <div class="form-group">
            <label>Trainer</label>
            @Html.DropDownListFor(m => m.TrainerId, ViewBag.Trainers as SelectList,
           "Select Trainer", new
           {
               @class = "form-control",
               @data_val = "true",
               @data_val_number = "The field Trainer must be a number.",
               @data_val_required = "Select Trainer."
           })
            <span class="field-validation-error" data-valmsg-for="TrainerId" data-valmsg-replace="true"></span>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Name)
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control ", @placeholder = "Name", @readonly = "readonly" })
            @Html.ValidationMessageFor(x => x.Name)
        </div>
        <div style="overflow:hidden;">
            <label>Batch Dates</label>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-8">
                        <div id="ediBatchDates"></div>
                    </div>
                </div>
            </div>
        </div>
        @Html.ValidationMessageFor(x => x.BatchDates)
        <input type="submit" class="btn btn-success" value="Update batch" />
    }
</div>
